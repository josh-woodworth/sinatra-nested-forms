<h1>Pirate</h1>

<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2><br>
  <p>Weight: <%= @pirate.weight %></p><br>
  <p>Height: <%= @pirate.height %></p>
</div><br>


<h1>Ships</h1>
<% @ships.each do |ship| %>
<div class="ship">
  <h2>Name: <%= ship.name %></h2><br>
  <p>Type: <%= ship.type %></p><br>
  <p>Booty: <%= ship.booty %></p><br>
</div><br>
<% end %>